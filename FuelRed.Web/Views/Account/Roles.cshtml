@model FuelRed.Web.Models.TypeUserViewModel
@{
    ViewData["Title"] = "Role";
}

<h2>Edit Role User</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Roles" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PicturePath" />
            <input type="hidden" asp-for="Document" />
            <input type="hidden" asp-for="Address" />
            <input type="hidden" asp-for="PhoneNumber" />
            <input type="hidden" asp-for="PicturePath" />
            <input type="hidden" asp-for="StationId" />
            <input type="hidden" asp-for="FirstName" />
            <input type="hidden" asp-for="LastName" />
            <input type="hidden" asp-for="StationId" />
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" disabled="disabled" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" disabled="disabled" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserType" class="control-label"></label>
                @Html.DropDownList("UserType",
                Html.GetEnumSelectList<FuelRed.Common.Enums.UserType>(),
                "Select Type", new { @class = "form-control" })
                <span asp-validation-for="UserType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.PicturePath))
        {
            <img src="@Url.Content(Model.PicturePath)" alt="Image" style="width:300px;height:300px;max-width: 100%; height: auto;" />
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
